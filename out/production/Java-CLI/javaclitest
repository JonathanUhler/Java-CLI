#!/usr/bin/java --source 14

import javacli.Argument;
import javacli.Option;
import javacli.OptionParser;
import javacli.Version;
import java.util.List;

public class javaclitest {

    public int test3;
    @Option(name = "test", abbreviation = 't', help = "test option", isFlag = true) public static String test;
    @Option(name = "arg", abbreviation = 'a', help = "test option with 1 arg", nargs = 1, type = Double.class) public static Double arg;
    @Option(name = "many", abbreviation = 'm', help = "test option with 3 args", nargs = 3, type = Integer.class) public static List<Integer> many;
    @Version(version = "1.0.0", abbreviation = 'V') public static String version;
    @Argument(name = "test2") public static String test2;
    @Argument(name = "foo") public static String foo;
    @Argument(name = "bar") public static String bar;

    public static void main(String[] args) {

        OptionParser parser = new OptionParser(javaclitest.class);
        parser.parse(args);

        System.out.println("test: " + test);
        System.out.println("arg: " + arg);
        System.out.println("many: " + many);
        System.out.println("test2: " + test2);
        System.out.println("foo: " + foo);
        System.out.println("bar: " + bar);

    }

}
